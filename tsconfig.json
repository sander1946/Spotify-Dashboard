{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2017", "DOM"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
